.container {
	padding: 40rpx;
	min-height: 100vh;
	box-sizing: border-box;
	background: #f7f8fa;
}

.header {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-bottom: 80rpx;
}

.logo {
	width: 160rpx;
	height: 160rpx;
	margin-bottom: 20rpx;
}

.title {
	font-size: 36rpx;
	font-weight: bold;
	color: #333;
}

.content {
	width: 100%;
}

.auth-box {
	padding: 40rpx;
	background: #fff;
	border-radius: 24rpx;
	box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.05);
	text-align: center;
}

.status-box {
	margin-bottom: 40rpx;
}

.status-text {
	font-size: 32rpx;
	color: #07c160;
	font-weight: 500;
}

.button-group {
	display: flex;
	justify-content: center;
	gap: 30rpx;
}

.btn {
	flex: 1;
	max-width: 240rpx;
	height: 88rpx;
	line-height: 88rpx;
	border-radius: 44rpx;
	font-size: 32rpx;
	border: none;
}

.btn.confirm {
	background: #07c160;
	color: #fff;
}

.btn.cancel {
	background: #f5f5f5;
	color: #666;
}

/* 扫码选项样式 */
.scan-box {
	padding: 40rpx;
	background: #fff;
	border-radius: 24rpx;
	box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.05);
}

.scan-option {
	padding: 30rpx;
	background: #f8f9fa;
	border-radius: 16rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	transition: all 0.3s;
}

.scan-option:active {
	background: #f0f0f0;
}

.option-icon {
	width: 96rpx;
	height: 96rpx;
	margin-bottom: 20rpx;
}

.option-icon image {
	width: 100%;
	height: 100%;
}

.option-text {
	font-size: 32rpx;
	font-weight: 500;
	color: #333;
	margin-bottom: 8rpx;
}

.option-desc {
	font-size: 24rpx;
	color: #999;
}

.footer {
	margin-top: 80rpx;
	text-align: center;
}

.tips {
	font-size: 24rpx;
	color: #999;
}